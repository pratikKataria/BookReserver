<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/std_margin"
        android:layout_marginTop="@dimen/std_margin"
        android:layout_marginRight="@dimen/std_margin"
        android:layout_marginBottom="@dimen/std_margin"
        android:elevation="8dp"
        app:cardElevation="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteX="8dp">

            <View
                android:id="@+id/view5"
                android:layout_width="3dp"
                android:layout_height="165dp"
                android:layout_marginTop="1dp"
                android:background="@color/babyPink"
                app:layout_constraintStart_toStartOf="parent"></View>

            <TextView
                android:id="@+id/name_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="8dp"
                android:padding="4dp"
                android:text="name :"
                android:textAllCaps="true"
                android:textSize="@dimen/cardview_fonts"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/guideline3"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/branch_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="4dp"
                android:text="branch :"
                android:textAllCaps="true"
                android:textSize="@dimen/cardview_fonts"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/date_row"
                app:layout_constraintStart_toStartOf="@+id/guideline3"
                app:layout_constraintTop_toBottomOf="@+id/name_row"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/date_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="8dp"
                android:padding="4dp"
                android:text="date  :"
                android:textAllCaps="true"
                android:textSize="@dimen/cardview_fonts"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/guideline3"
                app:layout_constraintTop_toBottomOf="@+id/branch_fill_row" />

            <TextView
                android:id="@+id/year_row"
                android:layout_width="62dp"
                android:layout_height="35dp"
                android:layout_gravity="left"
                android:layout_marginTop="8dp"
                android:padding="4dp"
                android:text="year  :"
                android:textAllCaps="true"
                android:textSize="@dimen/cardview_fonts"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/date_row"
                app:layout_constraintStart_toStartOf="@+id/guideline3"
                app:layout_constraintTop_toBottomOf="@+id/date_row" />

            <TextView
                android:id="@+id/name_fill_row"
                android:layout_width="157dp"
                android:layout_height="28dp"
                android:layout_gravity="left"
                android:padding="4dp"
                android:text="pratik katariya"
                android:textAllCaps="true"
                android:textSize="@dimen/cardview_fonts"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/branch_fill_row"
                app:layout_constraintTop_toTopOf="@+id/name_row" />


            <TextView
                android:id="@+id/branch_fill_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="8dp"
                android:padding="4dp"
                android:text="cse"
                android:textAllCaps="true"
                android:textSize="@dimen/cardview_fonts"
                app:layout_constraintStart_toEndOf="@+id/branch_row"
                app:layout_constraintTop_toBottomOf="@+id/name_row" />


            <TextView
                android:id="@+id/date_fill_row"
                android:layout_width="290dp"
                android:layout_height="33dp"
                android:layout_gravity="left"
                android:layout_marginTop="8dp"
                android:padding="4dp"
                android:text="26/11/2008"
                android:textAllCaps="true"
                android:textSize="@dimen/cardview_fonts"
                app:layout_constraintStart_toStartOf="@+id/branch_fill_row"
                app:layout_constraintTop_toBottomOf="@+id/branch_fill_row" />


            <TextView
                android:id="@+id/year_fill_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="8dp"
                android:padding="4dp"
                android:text="3rd"
                android:textAllCaps="false"
                android:textSize="@dimen/cardview_fonts"
                app:layout_constraintStart_toStartOf="@+id/date_fill_row"
                app:layout_constraintTop_toBottomOf="@+id/date_fill_row" />

            <TextView
                android:id="@+id/sec_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="4dp"
                android:padding="4dp"
                android:text="sec :"
                android:textAllCaps="true"
                android:textSize="@dimen/cardview_fonts"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/year_fill_row"
                app:layout_constraintStart_toEndOf="@+id/year_fill_row"
                app:layout_constraintTop_toTopOf="@+id/year_fill_row"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/sec_fill_row"
                android:layout_width="39dp"
                android:layout_height="26dp"
                android:layout_gravity="left"
                android:layout_marginStart="16dp"
                android:padding="4dp"
                android:text="B"
                android:textAllCaps="true"
                android:textSize="@dimen/cardview_fonts"
                app:layout_constraintBottom_toBottomOf="@+id/sec_row"
                app:layout_constraintStart_toEndOf="@+id/sec_row"
                app:layout_constraintTop_toTopOf="@+id/sec_row"
                app:layout_constraintVertical_bias="0.0" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="15dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="17dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>